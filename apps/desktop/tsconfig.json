{
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ESNext",
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["node", "electron"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/main/**/*.ts", "src/preload/**/*.ts", "src/shared/**/*.ts"],
	"exclude": ["node_modules", "dist", "__tests__", "src/renderer"]
}
