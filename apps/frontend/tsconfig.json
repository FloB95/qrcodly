{
	"extends": "qrcodly-typescript-config/tsconfig.frontend.json",
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.cjs",
		"**/*.js",
		".next/types/**/*.ts",
		".next/standalone/next.config.js",
		"next.config. mjs",
		"eslint.config.js"
	],
	"exclude": ["node_modules", ".next"],
	"compilerOptions": {
		"maxNodeModuleJsDepth": 2,
		"skipLibCheck": true,
		"baseUrl": ".",
		"plugins": [{ "name": "next" }],
		"paths": {
			"@/*": ["./src/*"],
			"@shared/schemas": ["./../../packages/shared/src"],
			"@shared/schemas/*": ["./../../packages/shared/src/*"],
			"fumadocs-mdx:collections/*": [".source/*"]
		},
		"checkJs": false
	}
}
