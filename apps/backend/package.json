{
	"name": "@apps/backend",
	"version": "1.0.0",
	"description": "QRcodly Backend App",
	"main": "src/index.ts",
	"type": "module",
	"private": true,
	"keywords": [],
	"author": "Florian Breuer",
	"license": "ISC",
	"engines": {
		"node": ">=22.11.0"
	},
	"scripts": {
		"lint": "eslint .",
		"type-check": "tsc --noEmit -p tsconfig.json",
		"pr:precheck": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run build",
		"build": "tsc -p tsconfig.json && tsc-alias && tsc-esm-fix && node build/src/core/config/env.js && pnpm run copyMailerTemplates",
		"copyMailerTemplates": "cp -r ./src/core/mailer/templates ./build/src/core/mailer/templates",
		"start": "pnpm run db:migrate && TZ=Europe/Berlin node build/src/index.js",
		"dev-server": "docker-compose up -d",
		"dev": "pnpm run db:migrate && TZ=Europe/Berlin tsx watch --include ./src  src/index.ts",
		"test": "NODE_ENV=test LOG_LEVEL=error pnpm run db:migrate && jest --runInBand",
		"test:detectOpenHandles": "jest --silent --runInBand --detectOpenHandles",
		"db:push": "drizzle-kit push --config=drizzle.config.ts",
		"db:migrate": "DB_MIGRATING=true tsx src/core/db/migrate.ts",
		"db:generate-migration": "drizzle-kit generate --config=drizzle.config.ts",
		"studio": "drizzle-kit studio",
		"cli:list": "npx tsx src/cli.ts list"
	},
	"devDependencies": {
		"@aws-sdk/types": "^3.775.0",
		"@faker-js/faker": "^9.7.0",
		"@types/jest": "^29.5.14",
		"@types/jsdom": "^21.1.7",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/node-cron": "^3.0.11",
		"@types/nodemailer": "^6.4.17",
		"@types/qs": "^6.9.18",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.32.1",
		"drizzle-kit": "^0.31.1",
		"esbuild": "~0.18.20",
		"eslint-plugin-drizzle": "^0.2.3",
		"get-tsconfig": "^4.10.0",
		"jest-mock-extended": "4.0.0-beta1",
		"qrcodly-eslint-config": "workspace:*",
		"qrcodly-typescript-config": "workspace:*",
		"ts-jest": "^29.3.2",
		"ts-jest-mock-import-meta": "^1.3.0",
		"tsc-alias": "^1.8.15",
		"tsc-esm-fix": "^3.1.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.802.0",
		"@aws-sdk/s3-request-presigner": "^3.802.0",
		"@axiomhq/pino": "^1.3.1",
		"@clerk/fastify": "^2.2.14",
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.0.1",
		"@fastify/csrf-protection": "^7.1.0",
		"@fastify/helmet": "^13.0.1",
		"@fastify/rate-limit": "^10.2.2",
		"@sentry/node": "catalog:",
		"@shared/schemas": "workspace:^",
		"commander": "^13.1.0",
		"dotenv": "catalog:",
		"drizzle-orm": "^0.42.0",
		"drizzle-zod": "^0.7.1",
		"fastify": "^5.3.2",
		"handlebars": "^4.7.8",
		"ioredis": "^5.6.1",
		"jsdom": "^26.1.0",
		"jsonwebtoken": "^9.0.2",
		"mysql2": "^3.14.1",
		"node-cron": "^3.0.3",
		"nodemailer": "^6.10.1",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"qr-code-styling": "^1.9.2",
		"qs": "^6.14.0",
		"reflect-metadata": "^0.2.2",
		"tsyringe": "^4.10.0",
		"uuid": "^11.1.0",
		"zod": "catalog:"
	}
}
