{
	"compilerOptions": {
		"module": "es2020",
		"moduleResolution": "bundler",
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"target": "ES2020",
		"sourceMap": true,
		"outDir": "./build",
		"incremental": true,
		"strict": true,
		"esModuleInterop": true,
		"noEmit": false,
		"skipLibCheck": true,
		"composite": true,
		"baseUrl": ".",
		"isolatedModules": true,
		"paths": {
			"@/*": ["./src/*"],
			"@shared/schemas": ["./../../packages/shared/dist"],
			"@shared/schemas/*": ["./../../packages/shared/dist/*"]
		}
	},
	"include": ["eslint.config.js", "./src/**/*.ts", "**/*.cjs", "**/*.mjs", "setup.test.ts"],
	"exclude": ["node_modules", "build", "test"],
	"types": ["@types/jest"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"references": [{ "path": "../../packages/shared/tsconfig.json" }]
}
