{
	"compilerOptions": {
		"composite": true,
		"target": "ES2020",
		"module": "CommonJS",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "src"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
