{
	"compilerOptions": {
		"composite": true,
		"target": "ES2020",
		"module": "es2020",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "src",
		"preserveSymlinks": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
