{
	"version": "1.0",
	"name": "qrcodly",
	"description": "QRcodly - QR code generation and management platform with dynamic QR codes, URL shortening, and analytics",
	"runtime": {
		"language": "node",
		"version": "22"
	},
	"servers": {
		"filesystem": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/flo/Projects/own/qrcodly-update"],
			"env": {}
		},
		"git": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-git", "--repository", "/Users/flo/Projects/own/qrcodly-update"]
		},
		"mysql": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-mysql"],
			"env": {
				"MYSQL_HOST": "localhost",
				"MYSQL_PORT": "3306",
				"MYSQL_USER": "root",
				"MYSQL_PASSWORD": "root",
				"MYSQL_DATABASE": "qrcodly"
			}
		}
	}
}
