{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"tasks": {
		"clean": {
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"format": {},
		"format:check": {},
		"lint:backend": {
			"dependsOn": ["qrcodly-api-types#lint"]
		},
		"lint:frontend": {},
		"lint": {},
		"lintfix": {},
		"test:backend": {
			"outputs": ["coverage/**"]
		},
		"test:frontend": {
			"outputs": ["coverage/**"]
		},
		"test:nodes": {
			"outputs": ["coverage/**"]
		},
		"test": {},
		"watch": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
